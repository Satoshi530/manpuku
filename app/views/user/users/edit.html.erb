<h4>ユーザー情報編集</h4>
<div>
  <%= form_with model: @user, url: user_path, method: :patch do |f| %>
  
    <div>
      <%= f.label :name, '名前' %>
      <%= f.text_field :name, autofocus: true %>
    </div>
    <div>
      <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
    </div>
    <div>
      <%= f.label :introduction, '自己紹介' %>
      <%= f.text_area :introduction, autofocus: true %>
    </div>
    <div>
      <%= f.submit "変更を保存" %>
    </div>
  <% end %>
</div>
<%= link_to '戻る', user_path %>


