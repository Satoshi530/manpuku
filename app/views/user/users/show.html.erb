<div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <h4><%= @user.name %></h4>
  <%= @user.introduction %>
</div>
<div>
  <% if @user == current_user %>
    <%= link_to "編集する", edit_user_path %>
  <% else %>
    <div id="follow">
      <%= render 'user/relationships/follow_button', user: @user %>
    </div>
  <% end %>
</div>
<div>
  <%= link_to user_followings_path(@user) do %>
    <p>フォロー:<%= @user.followings.count %>人</p>
  <% end %>
  <%= link_to user_followers_path(@user) do %>
    <p>フォロワー:<%= @user.followers.count %>人</p>
  <% end %>
</div>

<h4>投稿一覧</h4>
<table>
  <% @posts.each do |post| %>
  <tr>
    <td>
      <%= link_to post_path(post.id) do %>
        <%= post.restaurant_name %>
      <% end %>
    </td>
  </tr>
  <tr>
    <td>
      <%= image_tag post.get_image[0] %>
    </td>
    <td>
      <%= post.description %>
    </td>
  </tr>
  <tr>
    <td>
      <%= link_to (post.user) do %>
        <%= post.user.name %>
      <% end %>
    </td>
  </tr>
  <% end %>
</table>