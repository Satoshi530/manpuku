<table>
  <% posts.each do |post| %>
  <tr>
    <td>
      <%= link_to post_path(post.id) do %>
        <%= post.restaurant_name %>
      <% end %>
    </td>
  </tr>
  <tr>
    <td>
      <%= image_tag post.get_image[0] %>
    </td>
    <td>
      <%= post.description %>
    </td>
  </tr>
  <tr>
    <td>
      <%= link_to (post.user) do %>
        <%= post.user.name %>
      <% end %>
    </td>
  </tr>
  <% end %>
</table>