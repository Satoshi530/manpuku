<h2><%= @word %>の検索結果</h2>
<table class="table table-hover table-inverse">
  <% if @range == 'User' %>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
            <%= link_to user_path(user.id) do %>
              <%= image_tag user.get_profile_image(100,100) %>
              <%= user.name %>
            <% end %>
          </td>
          <td>
            <%= user.introduction %>
          </td>
          <td id="follow">
            <%= render 'user/relationships/follow_button', user: user %>
          </td>
        </tr>
      <% end %>
    </tbody>
  <% elsif @range == 'Post' %>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td>
            <%= link_to post_path(post.id) do %>
              <%= post.restaurant_name %>
            <% end %>
          </td>
          <td>
            <%= post.favorites.count %> いいね
            <p>コメント数：<%= post.post_comments.count %></p>
          </td>
          <td>
            <%= link_to user_path(post.user) do %>
              <%= image_tag post.user.get_profile_image(100,100) %>
              <%= post.user.name %>
            <% end %>
          </td>
          <td id="follow">
            <%= render 'user/relationships/follow_button', user: post.user %>
          </td>
        </tr>
      <% end %>
    </tbody>
  <% elsif @range == 'Tag' %>
    <tbody>
      <% @tags.each do |tag| %>
        <tr>
          <% tag.posts.each do |tag_post| %>
          <td>
            <%= tag_post.restaurant_name %>
          </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>