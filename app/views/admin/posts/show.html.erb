<div class="container">
  <div class="row">
    <div class="col text-right">
      <%= link_to "削除する", admin_post_path(@post.id), method: :delete, class: "btn btn-danger" %>
    </div>
    <table class="col-12">
      <tbody>
        <tr>
          <td>
           <%= render 'user/posts/restaurantname_and_tag', post: @post %>
          </td>
        </tr>
        <tr>
          <td class="text-center">
            <%= image_tag @post.get_image[0], size: "250x200" %><br>
            <%= link_to "写真を見る", images_post_path(@post) %>
            <%= render 'user/posts/evaluation', post: @post %>
          </td>
          <td class="border text-left">
            <%= @post.description %>
          </td>
        </tr>
        <tr>
          <td>
            <%= @post.info %>
          </td>
        </tr>
        <tr class="border-bottom">
          <td class="text-center col-2">
            <%= render 'user/posts/icon_and_name', post: @post, user: @user %>
          </td>
          <td class="col-8 text-right">
            <p>投稿日：<%= @post.created_at.strftime('%Y/%m/%d') %></p>
            <span id="comment_count">
              <%= "#{@post.post_comments.count}" %>
            </span>コメント
            <span id="favorite_count">
              <%= "#{@post.favorites.count}" %>
            </span>いいね
          </td>
        </tr>
      </tbody>
    </table>
    <div class="col-12">
      <div id="comments-area">
        <%= render 'user/post_comments/comments', post: @post %>
      </div>
    </div>
  </div>
</div>
