<div class="container">
  
  <div class="row">
    <div class="heading mt-3">
      <h4 class="text-center">タグ編集</h4>
    </div>
  </div>
  
  <div class="row text-center">
    <div class="col-3"></div>
    <div class="col-5">
      <%= form_with model: @tag, url: admin_tag_path, method: :patch, local:true do |f| %>
        <div class="form">
          <%= f.label :"タグ名" %>
          <%= f.text_field :name %>
          <%= f.submit "変更を保存する", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
    <div class="font-weight-bold text-dark mt-3">
      <%= link_to "戻る", request.referer %>
    </div>
  </div>
  
</div>