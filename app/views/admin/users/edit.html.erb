<div class="container">
  <div class="row">
    <div class="heading mt-3">
      <h4 class="text-center">ユーザー情報編集</h4>
    </div>
  </div>
  
  <div class="row">
    <div class="col-lg-6 mb-2">
      <%= image_tag @user.get_profile_image(150,100) %>
    </div>
    <table class="table table-bordered col-7 text-center">
      <thead class="bg-info text-light" >
        <tr>
          <th>ユーザーID</th>
          <th>ユーザー名</th>
          <th>ユーザーステータス</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>
            <%= @user.id %>
          </td>
          <td>
            <%= @user.name %>
          </td>
          <td>
            <%= form_with model: @user, url: admin_user_path, method: :patch do |f| %>
              <div>
                <%= f.label :ユーザーステータス %>
                <%= f.radio_button :is_deleted, :false%>
                <%= f.label :is_deleted, "有効" %>
                <%= f.radio_button :is_deleted, :true%>
                <%= f.label :is_deleted, "退会" %>
              </div>
              <div>
                <%= f.submit "変更を保存", class: "btn btn-info" %>
              </div>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
    
    <div class="font-weight-bold col-12 mb-2">
      <%= link_to "戻る", request.referer, class: "text-dark" %>
    </div>
  </div>
</div>