<div class="container">
  <div class="row">
    <div class="heading mt-3">
      <h4 class="text-center">ユーザー一覧</h4>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-12">
    <table class="table table-hover text-center">
      <thead class="bg-info text-light" >
        <tr>
          <th>ユーザーID</th>
          <th></th>
          <th>ユーザー名</th>
          <th>ユーザーステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td>
            <%= link_to admin_user_path(user.id), class: "text-dark font-weight-bold" do %>
              <%= image_tag user.get_profile_image(100,100) %></td>
            <% end %>
          <td>
            <%= link_to admin_user_path(user.id), class: "text-dark font-weight-bold" do %>
              <%= user.name %>
            <% end %>
          </td>
          <td>
            <% if user.is_deleted == false %>
              <p>有効</p>
            <% else %>
              <p>退会</p>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
    </div>
  </div>
</div>