<div class="container">
  <div class="row">
    <div class="heading">
      <h4>ユーザー一覧</h4>
    </div>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>ユーザーID</th>
          <th>ユーザー名</th>
          <th></th>
          <th>ユーザーステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= image_tag user.get_profile_image(100,100) %></td>
          <td>
            <% if user.is_deleted == false %>
              <p>有効</p>
            <% else %>
              <p>退会</p>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
